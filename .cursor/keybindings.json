[
    { "key": "ctrl+shift+tab", "command": "workbench.action.toggleAuxiliaryBar" },
    { "key": "ctrl+tab", "command": "workbench.action.toggleSidebarVisibility" },
    { "key": "ctrl+`", "command": "workbench.view.explorer" },
    { "key": "ctrl+shift+d", "command": "editor.action.selectHighlights", "when": "editorFocus" },
    { "key": "pageup", "command": "cursorMove", "args": { "to": "up", "by": "line", "value": 5 }, "when": "editorTextFocus" },
    { "key": "pagedown", "command": "cursorMove", "args": { "to": "down", "by": "line", "value": 5 }, "when": "editorTextFocus" },
    { "key": "ctrl+alt+r", "command": "workbench.action.splitEditor" },
    { "key": "ctrl+alt+d", "command": "workbench.action.splitEditorOrthogonal" },
    { "key": "ctrl+shift+`", "command": "workbench.files.action.collapseExplorerFolders" },
    { "key": "ctrl+n", "command": "explorer.newFile" },
    { "key": "ctrl+s", "command": "-workbench.action.files.save" },
    { "key": "ctrl+s", "command": "workbench.action.files.saveAll" },
    { "key": "shift+alt+c", "command": "copyRelativeFilePath", "when": "editorFocus" },
    { "key": "ctrl+shift+c", "command": "editor.action.revealDefinition", "when": "editorHasDefinitionProvider && editorTextFocus && !isInEmbeddedEditor" },
    { "key": "ctrl+h", "command": "editor.action.showHover", "when": "editorTextFocus" },
    { "key": "ctrl+shift+oem_6", "command": "editor.toggleFold", "when": "editorTextFocus && foldingEnabled" },
    { "key": "ctrl+abnt_c1", "command": "editor.action.commentLine", "when": "editorTextFocus && !editorReadonly" },
    { "key": "ctrl+oem_2", "command": "trailing.toggleSemicolon", "when": "editorTextFocus && !editorReadonly" },
]
